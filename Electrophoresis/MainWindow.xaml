<Window x:Class="Electrophoresis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Электрофорез" Height="350" Width="525">
	<DockPanel LastChildFill="True">
		<GroupBox Header="Файл для анализа:" DockPanel.Dock="Top">
			<DockPanel LastChildFill="True">
				<Button Margin="5" Padding="5,2,5,2" DockPanel.Dock="Right" Click="showImageClick">Показать</Button>
				<Button Margin="5" ToolTip="Выбрать файл" Padding="5,2,5,2" DockPanel.Dock="Right" Click="browseFileClick">...</Button>
				<TextBox Margin="5" Name="textBoxImagePath" Text="E:\Today\Светушка\DemoSeeds\test.jpg"/>
			</DockPanel>
		</GroupBox>
		<Button Margin="5" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Click="analysisClick" Padding="5,2,5,2">Выполнить анализ</Button>
		<Image Margin="5" Stretch="Uniform" Name="imagePreview" />
	</DockPanel>
</Window>
